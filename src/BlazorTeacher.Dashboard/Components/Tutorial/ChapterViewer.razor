@page "/tutorial/chapter/{Id:int}"
@using BlazorTeacher.Shared.Models
@using Markdig
@using Microsoft.JSInterop
@rendermode InteractiveServer
@inject ChapterService ChapterService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>@currentChapter?.Title ‚Äî Tutorial</PageTitle>

<div class="chapter-viewer">
    @if (currentChapter == null)
    {
        <div class="loading">Loading chapter...</div>
    }
    else
    {
        <div class="viewer-header">
            <button class="btn-back" @onclick="GoBack">‚Üê Back to Outline</button>
            <div class="chapter-info">
                <span class="chapter-number">Chapter @currentChapter.Number</span>
                <h1>@currentChapter.Title</h1>
            </div>
            <div class="progress-indicator">
                <div class="progress-bar" style="width: @progress?.ProgressPercentage%"></div>
            </div>
        </div>

        <div class="viewer-content">
            @if (showQuiz)
            {
                <div class="quiz-section">
                    <h2>üß† Knowledge Check</h2>
                    <p>Answer the following questions to complete this chapter.</p>
                    
                    @if (currentChapter.Quiz != null)
                    {
                        <div class="quiz-container">
                            @foreach (var (question, index) in currentChapter.Quiz.Questions.Select((q, i) => (q, i)))
                            {
                                <div class="quiz-question">
                                    <h3>@(index + 1). @question.Text</h3>
                                    <div class="options">
                                        @foreach (var (option, optIndex) in question.Options.Select((o, i) => (o, i)))
                                        {
                                            <button class="btn-option @GetOptionClass(index, optIndex)" 
                                                    @onclick="() => SelectOption(index, optIndex)"
                                                    disabled="@quizSubmitted">
                                                @option
                                            </button>
                                        }
                                    </div>
                                    @if (quizSubmitted)
                                    {
                                        <div class="explanation @(selectedOptions[index] == question.CorrectOptionIndex ? "correct" : "incorrect")">
                                            @if (selectedOptions[index] == question.CorrectOptionIndex)
                                            {
                                                <strong>‚úÖ Correct!</strong>
                                            }
                                            else
                                            {
                                                <strong>‚ùå Incorrect.</strong>
                                            }
                                            @question.Explanation
                                        </div>
                                    }
                                </div>
                            }
                            
                            <div class="quiz-actions">
                                @if (!quizSubmitted)
                                {
                                    <button class="btn-primary" @onclick="SubmitQuiz" disabled="@(!AllQuestionsAnswered)">Submit Answers</button>
                                }
                                else
                                {
                                    @if (quizPassed)
                                    {
                                        <button class="btn-success" @onclick="CompleteChapter">üéâ Finish Chapter</button>
                                    }
                                    else
                                    {
                                        <button class="btn-retry" @onclick="RetryQuiz">Retry Quiz</button>
                                    }
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>No quiz available for this chapter.</p>
                        <button class="btn-primary" @onclick="CompleteChapter">Finish Chapter</button>
                    }
                </div>
            }
            else if (currentChapter.Steps.Any())
            {
                var step = currentChapter.Steps[currentStepIndex];
                
                <div class="step-container">
                    <div class="step-header">
                        <span class="step-counter">Step @(currentStepIndex + 1) of @currentChapter.Steps.Count</span>
                        <h2>@step.Title</h2>
                    </div>
                    
                    <div class="step-content">
                        @* In a real app, use a Markdown renderer here *@
                        @((MarkupString)RenderMarkdown(step.Content))
                    </div>
                    
                    <div class="step-actions">
                        <button class="btn-secondary" @onclick="PreviousStep" disabled="@(currentStepIndex == 0)">Previous</button>
                        
                        @if (currentStepIndex < currentChapter.Steps.Count - 1)
                        {
                            <button class="btn-primary" @onclick="NextStep">Next Step ‚Üí</button>
                        }
                        else
                        {
                            <button class="btn-primary" @onclick="StartQuiz">Take Quiz ‚Üí</button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <p>This chapter has no interactive steps yet.</p>
                    <button class="btn-primary" @onclick="CompleteChapter">Mark as Complete</button>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Chapter? currentChapter;
    private ChapterProgress? progress;
    private int currentStepIndex;
    private bool showQuiz;
    
    // Quiz state
    private Dictionary<int, int> selectedOptions = new();
    private bool quizSubmitted;
    private bool quizPassed;

    protected override void OnInitialized()
    {
        currentChapter = ChapterService.GetAllChapters().FirstOrDefault(c => c.Id == Id);
        if (currentChapter != null)
        {
            progress = ChapterService.GetProgress(Id);
            currentStepIndex = progress.CurrentStepIndex;
            
            // If already completed, user can review, but let's start at 0 or saved index
            if (currentStepIndex >= currentChapter.Steps.Count && currentChapter.Steps.Any())
            {
                currentStepIndex = 0; // Reset for review
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Initialize Prism.js syntax highlighting after render
        await JSRuntime.InvokeVoidAsync("PrismHelper.highlightAll");
    }

    private void PreviousStep()
    {
        if (currentStepIndex > 0)
        {
            currentStepIndex--;
            StateHasChanged();
        }
    }

    private void NextStep()
    {
        if (currentChapter != null && currentStepIndex < currentChapter.Steps.Count - 1)
        {
            ChapterService.CompleteStep(Id, currentStepIndex);
            currentStepIndex++;
            progress = ChapterService.GetProgress(Id); // Refresh progress
            StateHasChanged();
        }
    }

    private void StartQuiz()
    {
        // Mark last step as done
        ChapterService.CompleteStep(Id, currentStepIndex);
        showQuiz = true;
    }

    private void SelectOption(int questionIndex, int optionIndex)
    {
        if (!quizSubmitted)
        {
            selectedOptions[questionIndex] = optionIndex;
        }
    }

    private bool AllQuestionsAnswered => 
        currentChapter?.Quiz != null && selectedOptions.Count == currentChapter.Quiz.Questions.Count;

    private void SubmitQuiz()
    {
        quizSubmitted = true;
        
        // Check if all correct
        if (currentChapter?.Quiz != null)
        {
            int correctCount = 0;
            for (int i = 0; i < currentChapter.Quiz.Questions.Count; i++)
            {
                if (selectedOptions.TryGetValue(i, out int selected) && 
                    selected == currentChapter.Quiz.Questions[i].CorrectOptionIndex)
                {
                    correctCount++;
                }
            }
            
            // Simple pass logic: 100% correct required (can be relaxed)
            quizPassed = correctCount == currentChapter.Quiz.Questions.Count;
        }
        else
        {
            quizPassed = true;
        }
    }

    private void RetryQuiz()
    {
        quizSubmitted = false;
        quizPassed = false;
        selectedOptions.Clear();
    }

    private void CompleteChapter()
    {
        ChapterService.CompleteChapter(Id);
        GoBack();
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/tutorial/outline");
    }

    private string GetOptionClass(int qIndex, int optIndex)
    {
        if (!selectedOptions.TryGetValue(qIndex, out int selected))
            return "";
            
        if (quizSubmitted)
        {
            var question = currentChapter?.Quiz?.Questions[qIndex];
            if (question == null) return "";

            if (optIndex == question.CorrectOptionIndex) return "correct";
            if (selected == optIndex && selected != question.CorrectOptionIndex) return "wrong";
            return "dimmed";
        }
        
        return selected == optIndex ? "selected" : "";
    }
    
    // Markdown renderer using Markdig with code block support
    private string RenderMarkdown(string markdown)
    {
        var pipeline = new MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .Build();
            
        return Markdown.ToHtml(markdown, pipeline);
    }
}

