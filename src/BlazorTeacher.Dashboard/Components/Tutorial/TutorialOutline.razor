@page "/tutorial/outline"
@rendermode InteractiveServer

@inject ChapterService ChapterService
@implements IDisposable

<PageTitle>Tutorial Outline — .NET 10 API + Blazor Dashboard</PageTitle>

<div class="space-y-8">
    <!-- Header -->
    <div class="text-center">
        <h1 class="text-2xl font-bold text-slate-900 sm:text-3xl lg:text-4xl">Full Tutorial Outline</h1>
        <p class="mt-2 text-sm text-slate-500 sm:text-base">.NET 10 API + Blazor Dashboard — A Complete Multi-Chapter Guide</p>
        
        <!-- Progress Summary -->
        <div class="mt-6 mx-auto max-w-xl rounded-xl bg-gradient-to-br from-primary-600 via-primary-700 to-accent-600 p-6 text-white shadow-lg">
            <div class="flex items-center justify-between mb-3">
                <span class="text-sm font-medium text-primary-100">
                    <span class="text-lg font-bold text-white">@completedCount</span> / @totalCount chapters completed
                </span>
                <span class="text-2xl font-bold">@overallProgress%</span>
            </div>
            <div class="h-3 w-full rounded-full bg-white/20 overflow-hidden">
                <div class="h-full rounded-full bg-white transition-all duration-500 ease-out" style="width: @overallProgress%"></div>
            </div>
            @if (completedCount > 0)
            {
                <button @onclick="ResetAllProgress" class="mt-4 inline-flex items-center gap-2 rounded-lg bg-white/10 px-4 py-2 text-sm font-medium text-white ring-1 ring-white/20 hover:bg-white/20 transition-colors">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                    Reset Progress
                </button>
            }
        </div>
    </div>

    <!-- Chapters -->
    <div class="space-y-10">
        @foreach (var categoryGroup in chaptersByCategory)
        {
            <section>
                <h2 class="mb-4 text-lg font-semibold text-slate-900 border-b-2 border-primary-500 pb-2">
                    @ChapterService.GetCategoryDisplayName(categoryGroup.Key)
                </h2>
                
                <div class="space-y-4">
                    @foreach (var chapter in categoryGroup.Value)
                    {
                        var progress = ChapterService.GetProgress(chapter.Id);
                        var isLocked = IsChapterLocked(chapter);
                        
                        <div class="group rounded-xl bg-white p-5 shadow-sm ring-1 ring-slate-200 hover:shadow-md transition-all duration-200 @GetChapterCardClasses(progress.State, isLocked)">
                            <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
                                <div class="flex items-start gap-3 flex-1">
                                    <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg @GetStateIconBgClasses(progress.State, isLocked)">
                                        @GetStateIconSvg(progress.State, isLocked)
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center gap-2">
                                            <span class="text-xs font-medium text-slate-400">Chapter @chapter.Number</span>
                                            @if (progress.State == LearningState.InProgress)
                                            {
                                                <span class="inline-flex items-center rounded-full bg-amber-100 px-2 py-0.5 text-xs font-medium text-amber-700">In Progress</span>
                                            }
                                            @if (progress.State == LearningState.Completed)
                                            {
                                                <span class="inline-flex items-center rounded-full bg-emerald-100 px-2 py-0.5 text-xs font-medium text-emerald-700">Completed</span>
                                            }
                                        </div>
                                        <h3 class="mt-1 text-base font-semibold text-slate-900">
                                            @if (!string.IsNullOrEmpty(chapter.Route) && !isLocked)
                                            {
                                                <a href="@chapter.Route" class="hover:text-primary-600 transition-colors">@chapter.Title</a>
                                            }
                                            else
                                            {
                                                @chapter.Title
                                            }
                                        </h3>
                                        <p class="mt-1 text-sm text-slate-600 line-clamp-2">@chapter.Description</p>
                                        
                                        @if (chapter.Topics.Any())
                                        {
                                            <div class="mt-3 flex flex-wrap gap-1.5">
                                                @foreach (var topic in chapter.Topics.Take(4))
                                                {
                                                    <span class="inline-flex items-center rounded-md bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-600">@topic</span>
                                                }
                                                @if (chapter.Topics.Count() > 4)
                                                {
                                                    <span class="inline-flex items-center rounded-md bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-600">+@(chapter.Topics.Count() - 4) more</span>
                                                }
                                            </div>
                                        }
                                        
                                        @if (progress.State == LearningState.InProgress)
                                        {
                                            <div class="mt-3 flex items-center gap-2">
                                                <div class="h-1.5 flex-1 rounded-full bg-slate-200 overflow-hidden">
                                                    <div class="h-full rounded-full bg-amber-500 transition-all duration-300" style="width: @progress.ProgressPercentage%"></div>
                                                </div>
                                                <span class="text-xs font-medium text-slate-500">@progress.ProgressPercentage%</span>
                                            </div>
                                        }
                                        
                                        @if (progress.CompletedAt.HasValue)
                                        {
                                            <p class="mt-2 text-xs text-emerald-600 font-medium">
                                                Completed on @progress.CompletedAt.Value.ToString("MMM dd, yyyy")
                                            </p>
                                        }
                                    </div>
                                </div>
                                
                                <div class="flex items-center gap-2 sm:flex-shrink-0">
                                    @if (isLocked)
                                    {
                                        <button disabled class="inline-flex items-center gap-1.5 rounded-lg bg-slate-100 px-3 py-2 text-sm font-medium text-slate-400 cursor-not-allowed">
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                                            </svg>
                                            Locked
                                        </button>
                                    }
                                    else if (progress.State == LearningState.NotStarted)
                                    {
                                        <button @onclick="() => OpenChapter(chapter.Id)" class="inline-flex items-center gap-1.5 rounded-lg bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-700 transition-colors">
                                            Start
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                                            </svg>
                                        </button>
                                    }
                                    else if (progress.State == LearningState.InProgress)
                                    {
                                        <button @onclick="() => OpenChapter(chapter.Id)" class="inline-flex items-center gap-1.5 rounded-lg bg-amber-500 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-600 transition-colors">
                                            Continue
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                                            </svg>
                                        </button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => OpenChapter(chapter.Id)" class="inline-flex items-center gap-1.5 rounded-lg bg-accent-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-accent-700 transition-colors">
                                            Review
                                        </button>
                                        <button @onclick="() => ResetChapter(chapter.Id)" class="inline-flex items-center gap-1.5 rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50 transition-colors">
                                            Reset
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        }
    </div>
    
    <!-- Footer CTA -->
    <div class="rounded-xl bg-gradient-to-br from-slate-800 to-slate-900 p-8 text-center shadow-lg">
        <h3 class="text-xl font-semibold text-white">Ready to Start?</h3>
        <p class="mt-2 text-slate-300">Begin your journey with Chapter 1 and work your way through the complete tutorial!</p>
        <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:justify-center">
            <a href="/tutorial/chapter/1" class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-3 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-100 transition-colors">
                Start with Chapter 1
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
            </a>
            <a href="/" class="inline-flex items-center justify-center gap-2 rounded-lg bg-white/10 px-6 py-3 text-sm font-semibold text-white ring-1 ring-white/20 hover:bg-white/20 transition-colors">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                </svg>
                Back to Home
            </a>
        </div>
    </div>
</div>

@code {
    private Dictionary<ChapterCategory, List<Chapter>> chaptersByCategory = new();
    private int totalCount;
    private int completedCount;
    private int overallProgress;

    protected override void OnInitialized()
    {
        LoadData();
        ChapterService.OnProgressChanged += HandleProgressChanged;
    }
    
    @inject NavigationManager NavigationManager

    private bool IsChapterLocked(Chapter chapter)
    {
        if (chapter.Number == 1) return false;
        
        // Find previous chapter
        var prevChapter = ChapterService.GetAllChapters().FirstOrDefault(c => c.Number == chapter.Number - 1);
        if (prevChapter == null) return false;
        
        var prevProgress = ChapterService.GetProgress(prevChapter.Id);
        return prevProgress.State != LearningState.Completed;
    }

    private void OpenChapter(int chapterId)
    {
        NavigationManager.NavigateTo($"/tutorial/chapter/{chapterId}");
    }

    private void LoadData()
    {
        chaptersByCategory = ChapterService.GetChaptersByCategory();
        totalCount = ChapterService.GetAllChapters().Count;
        completedCount = ChapterService.GetCompletedCount();
        overallProgress = ChapterService.GetOverallProgressPercentage();
    }

    private void HandleProgressChanged()
    {
        LoadData();
        StateHasChanged();
    }

    private void CompleteChapter(int chapterId)
    {
        ChapterService.CompleteChapter(chapterId);
    }

    private void ResetChapter(int chapterId)
    {
        ChapterService.ResetChapter(chapterId);
    }

    private void ResetAllProgress()
    {
        ChapterService.ResetAllProgress();
    }

    public void Dispose()
    {
        ChapterService.OnProgressChanged -= HandleProgressChanged;
    }

    private string GetChapterCardClasses(LearningState state, bool isLocked)
    {
        if (isLocked) return "opacity-60 bg-slate-50";
        return state switch
        {
            LearningState.InProgress => "border-l-4 border-l-amber-500 bg-amber-50/50",
            LearningState.Completed => "border-l-4 border-l-emerald-500 bg-emerald-50/50",
            _ => "border-l-4 border-l-slate-300"
        };
    }

    private string GetStateIconBgClasses(LearningState state, bool isLocked)
    {
        if (isLocked) return "bg-slate-100 text-slate-400";
        return state switch
        {
            LearningState.InProgress => "bg-amber-100 text-amber-600",
            LearningState.Completed => "bg-emerald-100 text-emerald-600",
            _ => "bg-slate-100 text-slate-400"
        };
    }

    private MarkupString GetStateIconSvg(LearningState state, bool isLocked)
    {
        if (isLocked)
        {
            return new MarkupString("<svg class=\"h-5 w-5\" fill=\"none\" viewBox=\"0 0 24 24\" stroke-width=\"1.5\" stroke=\"currentColor\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z\" /></svg>");
        }
        return state switch
        {
            LearningState.Completed => new MarkupString("<svg class=\"h-5 w-5\" fill=\"none\" viewBox=\"0 0 24 24\" stroke-width=\"2\" stroke=\"currentColor\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M4.5 12.75l6 6 9-13.5\" /></svg>"),
            LearningState.InProgress => new MarkupString("<svg class=\"h-5 w-5\" fill=\"none\" viewBox=\"0 0 24 24\" stroke-width=\"1.5\" stroke=\"currentColor\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z\" /></svg>"),
            _ => new MarkupString("<svg class=\"h-5 w-5\" fill=\"none\" viewBox=\"0 0 24 24\" stroke-width=\"1.5\" stroke=\"currentColor\"><circle cx=\"12\" cy=\"12\" r=\"9\" /></svg>")
        };
    }
}

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
