@page "/tutorial/outline"
@rendermode InteractiveServer

@inject ChapterService ChapterService
@implements IDisposable

<PageTitle>Tutorial Outline ‚Äî .NET 10 API + Blazor Dashboard</PageTitle>

<div class="outline-page">
    <header class="outline-header">
        <h1>üìö Full Tutorial Outline</h1>
        <p class="subtitle">.NET 10 API + Blazor Dashboard ‚Äî A Complete Multi-Chapter Guide</p>
        
        <div class="progress-summary">
            <div class="progress-stats">
                <span class="stat">
                    <strong>@completedCount</strong> / @totalCount chapters completed
                </span>
                <span class="progress-percentage">@overallProgress%</span>
            </div>
            <div class="progress-bar-container">
                <div class="progress-bar" style="width: @overallProgress%"></div>
            </div>
            @if (completedCount > 0)
            {
                <button class="btn-reset" @onclick="ResetAllProgress">
                    üîÑ Reset Progress
                </button>
            }
        </div>
    </header>

    <div class="chapters-container">
        @foreach (var categoryGroup in chaptersByCategory)
        {
            <section class="category-section">
                <h2 class="category-title">@ChapterService.GetCategoryDisplayName(categoryGroup.Key)</h2>
                
                <div class="chapters-list">
                    @foreach (var chapter in categoryGroup.Value)
                    {
                        var progress = ChapterService.GetProgress(chapter.Id);
                        var stateClass = ChapterService.GetStateClass(progress.State);
                        
                        <div class="chapter-card @stateClass">
                            <div class="chapter-header">
                                <div class="chapter-number">
                                    <span class="state-icon @stateClass">
                                        @ChapterService.GetStateIcon(progress.State)
                                    </span>
                                    Chapter @chapter.Number
                                </div>
                                <div class="chapter-actions">
                                    @if (progress.State == LearningState.NotStarted)
                                    {
                                        <button class="btn-action btn-start" @onclick="() => StartChapter(chapter.Id)">
                                            Start
                                        </button>
                                    }
                                    else if (progress.State == LearningState.InProgress)
                                    {
                                        <button class="btn-action btn-complete" @onclick="() => CompleteChapter(chapter.Id)">
                                            Complete
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-action btn-reset-small" @onclick="() => ResetChapter(chapter.Id)">
                                            Reset
                                        </button>
                                    }
                                </div>
                            </div>
                            
                            <h3 class="chapter-title">
                                @if (!string.IsNullOrEmpty(chapter.Route))
                                {
                                    <a href="@chapter.Route">@chapter.Title</a>
                                }
                                else
                                {
                                    @chapter.Title
                                }
                            </h3>
                            
                            <p class="chapter-description">@chapter.Description</p>
                            
                            @if (chapter.Topics.Any())
                            {
                                <div class="chapter-topics">
                                    <strong>Topics:</strong>
                                    <ul>
                                        @foreach (var topic in chapter.Topics)
                                        {
                                            <li>@topic</li>
                                        }
                                    </ul>
                                </div>
                            }
                            
                            @if (chapter.KeyPoints.Any())
                            {
                                <div class="chapter-keypoints">
                                    <strong>Key Points:</strong>
                                    <ul>
                                        @foreach (var point in chapter.KeyPoints)
                                        {
                                            <li>@point</li>
                                        }
                                    </ul>
                                </div>
                            }
                            
                            @if (progress.State == LearningState.InProgress)
                            {
                                <div class="chapter-progress">
                                    <div class="progress-bar-mini-container">
                                        <div class="progress-bar-mini" style="width: @progress.ProgressPercentage%"></div>
                                    </div>
                                    <span class="progress-text">@progress.ProgressPercentage% complete</span>
                                </div>
                            }
                            
                            @if (progress.CompletedAt.HasValue)
                            {
                                <div class="completion-info">
                                    ‚úì Completed on @progress.CompletedAt.Value.ToString("MMM dd, yyyy")
                                </div>
                            }
                        </div>
                    }
                </div>
            </section>
        }
    </div>
    
    <div class="outline-footer">
        <h3>üéØ Ready to Start?</h3>
        <p>Begin your journey with Chapter 1 and work your way through the complete tutorial!</p>
        <div class="footer-actions">
            <a href="/tutorial/api" class="btn btn-primary">Start with API Tutorial ‚Üí</a>
            <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
        </div>
    </div>
</div>

@code {
    private Dictionary<ChapterCategory, List<Chapter>> chaptersByCategory = new();
    private int totalCount;
    private int completedCount;
    private int overallProgress;

    protected override void OnInitialized()
    {
        LoadData();
        ChapterService.OnProgressChanged += HandleProgressChanged;
    }

    private void LoadData()
    {
        chaptersByCategory = ChapterService.GetChaptersByCategory();
        totalCount = ChapterService.GetAllChapters().Count;
        completedCount = ChapterService.GetCompletedCount();
        overallProgress = ChapterService.GetOverallProgressPercentage();
    }

    private void HandleProgressChanged()
    {
        LoadData();
        StateHasChanged();
    }

    private void StartChapter(int chapterId)
    {
        ChapterService.StartChapter(chapterId);
    }

    private void CompleteChapter(int chapterId)
    {
        ChapterService.CompleteChapter(chapterId);
    }

    private void ResetChapter(int chapterId)
    {
        ChapterService.ResetChapter(chapterId);
    }

    private void ResetAllProgress()
    {
        ChapterService.ResetAllProgress();
    }

    public void Dispose()
    {
        ChapterService.OnProgressChanged -= HandleProgressChanged;
    }
}

